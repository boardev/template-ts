{
  "name": "template-ts",
  "version": "1.0.0",
  "description": "typescript template",
  "exports": {
    ".": "./dist/src/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "pnpm exec tsc --build tsconfig.json",
    "postbuild": "cp src/**/*.wasm dist/src/examples/",
    "lint": "eslint --fix . --ext .js,.cjs,.mjs,.ts --cache",
    "format": "prettier . --ignore-path .eslintignore --write --ignore-unknown",
    "clean": "rm -rf dist",
    "js": "node --experimental-import-meta-resolve --experimental-network-imports --experimental-wasm-modules --experimental-vm --no-warnings --loader @esbuild-kit/esm-loader",
    "ts": "node --experimental-import-meta-resolve --experimental-network-imports --experimental-wasm-modules --no-warnings --loader ts-node/esm"
  },
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.5.4",
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "bun-types": "^0.4.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "prettier": "^2.8.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7.0.0"
  },
  "author": "Omar Aziz <github@omaraziz.dev>",
  "repository": {
    "type": "git",
    "url": "https://github.com/o-az/template-ts-basic.git"
  },
  "keywords": ["typescript", "template", "esm", "pnpm"],
  "license": "ISC"
}
